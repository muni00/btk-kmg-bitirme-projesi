<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
   <data>
       <variable
           name="besin"
           type="com.muazzeznihalbahadir.yemekkitabi.model.Besin" />
       <variable
           name="listener"
           type="com.muazzeznihalbahadir.yemekkitabi.adapter.BesinClickListener" />
   </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:onClick="@{listener::besinTiklandi}"
    >
    <TextView
        android:id="@+id/besin_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@{String.valueOf(besin.uuid)}">
    </TextView>
    <ImageView
        android:id="@+id/imageView"
        android:downloadImage="@{besin.besinGorsel}"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="2"
        app:srcCompat="@drawable/ic_launcher_foreground">

    </ImageView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/isim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{besin.besinIsim}"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            >


        </TextView>
        <TextView
            android:id="@+id/kalori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{besin.besinKalori}"
            android:textSize="18sp"
            android:layout_margin="5dp"
            >

        </TextView>
    </LinearLayout>
</LinearLayout>
</layout>